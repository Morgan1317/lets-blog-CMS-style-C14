{{> blog-info blog}}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>
   {{#each blog.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
  <div>
    <button type="submit">add comment</button>

  </div>
</form>
{{/if}}


{{#if loggedIn}}
<script src="/javascript/add-comment.js"></script>
{{/if}}